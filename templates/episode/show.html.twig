{% extends 'base.html.twig' %}

{% block title %}{{ 'page.episodeAdminShow'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'page.episodeAdminShowTitle'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>{{ 'word.title'|trans }}</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>{{ 'word.number'|trans }}</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>{{ 'word.synopsis'|trans }}</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}">{{ 'page.adminReturnButton'|trans }}</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'list.edit'|trans }}</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
