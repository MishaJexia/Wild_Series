{% extends 'base.html.twig' %}

{% block title %}{{ 'page.serieAdminShow'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'page.serieAdminShowTitle'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>{{ 'word.title'|trans }}</th>
                <td>{{ program.title }}</td>
                <i id="watchlist-{{ program.id }}" class="{{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart watchlist" style="color: blue" data-href="{{path('program_watchlist', {'id': program.id})}}"></i>
            </tr>
            <tr>
                <th>{{ 'word.summary'|trans }}</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>{{ 'word.poster'|trans }}</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <strong>{{ 'word.actor'|trans }} :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>
                <a href="/actor/{{ actor.slug }}">{{ actor.name }}</a>
            </li>
        {% else %}
            <li>{{ 'page.serieAdminListActorShow'|trans }}</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">{{ 'page.serieAdminReturnButton'|trans }}</a>

    <a href="{{ path('program_edit', {'slug': program.slug}) }}">{{ 'list.edit'|trans }}</a>

    {{ include('program/_delete_form.html.twig') }}

    {% block javascripts %}
        {{ encore_entry_script_tags('watchlist') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
