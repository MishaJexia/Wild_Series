{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
                <i id="watchlist-{{ program.id }}" class="{{ app.user.isInWatchlist(program) ? 'fas' : 'far' }} fa-heart watchlist" style="color: blue" data-href="{{path('program_watchlist', {'id': program.id})}}"></i>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li>
                <a href="/actor/{{ actor.slug }}">{{ actor.name }}</a>
            </li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}

    {% block javascripts %}
        {{ encore_entry_script_tags('watchlist') }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
