{% extends "base.html.twig" %}

{% block title %}
    {{ 'page.categoryAdmin'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'page.categoryAdminTitle'|trans }}</h1>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul>
                    {% for category in categories %}
                        <li>{{ category.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <a href="{{ path('category_add') }}">{{ 'page.categoryAdminCreateButton'|trans }}</a>
{% endblock %}