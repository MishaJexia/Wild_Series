{% extends 'base.html.twig' %}

{% block title %}{{ 'page.seasonAdminShow'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'page.seasonAdminShowTitle'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'word.number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'word.year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'word.description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">{{ 'page.adminReturnButton'|trans }}</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'list.edit'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
