{% extends 'base.html.twig' %}

{% block title %}{{ 'page.seasonAdmin'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'page.seasonAdminTitle'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'word.number'|trans }}</th>
                <th>{{ 'word.year'|trans }}</th>
                <th>{{ 'word.description'|trans }}</th>
                <th>{{ 'word.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}">{{ 'list.show'|trans }}</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'list.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'page.seasonAdminListMessage'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}">{{ 'page.seasonAdminCreateButton'|trans }}</a>
{% endblock %}
