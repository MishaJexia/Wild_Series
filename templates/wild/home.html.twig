{% extends "base.html.twig" %}

{% block title %}
    {{ 'page.home'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'page.homeMessage'|trans }}</h1>

    <a href="{{ path('wild_show', { 'slug': "walking-dead" }) }}">
        Testing show() method from WildController with a real program s slug.
    </a>
    <br>
    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>
    <br>
    <a href="{{ path('show_category', { 'categoryName': "horreur" }) }}">
        Testing showByCategory() method from WildController to view all programs by category.
    </a>
    <br>
    <a href="{{ path('show_program', { 'programName': "walking-dead" }) }}">
        Testing showByProgramm() method from WildController to view programs by title.
    </a>

    <div class="container">
        <div class="row">
            {% for program in programs %}
                <div class="col-4">
                    <div class="card text-center m-5">
                        <h4 class="card-header font-weight-bold ">
                            <a href="{{ path('show_program', {'slug':program.title|lower|replace({' ': '-'})}) }}">{{ program.title }}</a>
                        </h4>
                        <img class="align-self-center mt-2 h-25 rounded img-fluid poster" src="{{ program.poster }}"
                             alt="{{ program.title }}">
                        <div class="card-body">
                            <p>{{ 'page.homeCardCategory'|trans }} : {{ program.category.name }}</p>
                            <p class="card-text">{{ program.summary }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                {{ 'page.homeListMessage'|trans }}
            {% endfor %}
        </div>
    </div>
{% endblock %}